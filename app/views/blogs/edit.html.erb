
<div class=""body">
    <div class="header">
        <div class="header-title">
            <%= link_to "blog", root_path, method: :get %>
        </div>

        <div class="side-title">
        <h3>
            changes
        </h3>
        </div>

    </div>
    <div class="main">
            <div class="contents_row">
                <div class="container">


                
                  <%= form_with(model: @comment, url:"/blogs/#{@comment.id}", method: :patch ) do %>
                    <div class="content-title">
                        <textarea  cols="30" name="title" placeholder="title" id="title"><%= @comment.title %></textarea>
                    </div>
                    <div class="content-text">
                        <textarea cols="30" name="text" placeholder="text" rows="20" cols="30" wrap="hard"><%= @comment.text %></textarea>
                    </div>
                    <div class="sent">
                        <input type="submit" value="SENT" rows="5">
                    </div>
                 <% end %>
                </div>
            </div>



    </div>
</div>