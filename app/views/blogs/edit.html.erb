<div class="contents row">
    <%= form_tag("/blogs/#{@comment.id}", method: :patch ) do %>
      <h3>
        編集する
      </h3>
      <input placeholder="Image Url" type="text" name="image" value="<%= @comment.image %>" autofocus="true">
      <textarea cols="30" name="title" placeholder="title" rows="10"><%= @comment.title %></textarea>
      <textarea cols="30" name="text" placeholder="text" rows="10"><%= @comment.text %></textarea>

      <input type="submit" value="SENT">
    <% end %>
